{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Liste des contacts{% endblock %}

{% block body %}

{% if contacts is empty %}
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
			Liste des contacts vide !</h1>
{% else %}
<div class="container p-4">
    <div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
			Liste des contacts</h1>
		<div class="row justify-content-center">
			<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr class="fw-bold text-primary">
								<th scope="col">Nom</th>
								<th scope="col">Prénom</th>
                                <th scope="col">Email</th>
								<th scope="col">Sujet</th>
								<th scope="col">Texte</th>
								<th scope="col">Date de contact</th>
							</tr>
						</thead>
						<tbody>
							{% for contact in contacts |sort((a, b) => b.dateContact <=> a.dateContact) %}
								<tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
									<td>{{ contact.nom | upper }}</td>
									<td>{{ contact.prenom | capitalize }}</td>
                                    <td>{{ contact.email }}</td>
									<td>{{ contact.sujet }}</td>
									<td>{{ contact.texte }}</td>
									<td>{{ contact.dateContact | date("d-m-Y à H-m-s")}}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

{% endif %}

{% endblock %}